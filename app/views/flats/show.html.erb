

<div class="container">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="https://cdn.archilovers.com/projects/57d7daff-e586-4a1b-83b3-8d5bf0f8e070.jpg" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="https://roohome.com/wp-content/uploads/2016/07/modern-house-interior-design-1280x720.jpg" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="https://pix10.agoda.net/hotelImages/4408208/-1/3260e9011390a7b17674c23013cc1a1c.jpg?s=1024x768" alt="Third slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<div class="container py-3">
  <div class="row">
    <div class="col-md-8">
      <div class="title border-bottom">
        <h1><%= @flat.title%>,</h1> <h3><%=@flat.location %></h3>
      </div>
      <div class="description">
        <div class="short-description">
          <% rand(1..5).times do %>
            <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-star-fill text-warning stars" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.283.95l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
            </svg>
          <%end%>

        </div>


          <div class="card-description p-3 mb-3">
            <p><%= @flat.description %></p>

          </div>
      </div>
    </div>


  <div class="col-md-4">
          <!-- checkout -->
          <div class="bg-white border p-3 sticky-top" id="confirmation-card">
            <a href="#" class="btn btn-outline-success w-100">Checkout</a>

            <div class="d-flex justify-content-between mt-3">
              <p><strong>Nights</strong></p>
              <div class="col-sm-3 my-1">
                <select class="form-control form-control-sm" type="search">
                  <option value="">1</option>
                  <option value="">2</option>
                  <option value="">3</option>
                  <option value="">4</option>
                  <option value="">5+</option>
                </select>
              </div>
            </div>

            <div class="d-flex justify-content-between mt-3">
              <p><strong>Guests</strong></p>
              <p>??</p>
            </div>

            <div class="d-flex justify-content-between mt-3 border-bottom">
              <p><strong>Fees</strong></p>
              <p><%fees = rand(10..50) %> <%=fees%>€</p>
            </div>

            <div class="d-flex justify-content-between mt-3">
              <p><strong>Total</strong></p>
              <p><strong><%= @flat.price * rand(1..5) + fees %>€</strong></p>
            </div>
          </div>
          <!-- /checkout -->
        </div>
</div>
