<div id="carousel-<%= flat_id %>" class="carousel slide" data-interval="fals" style ="width: 25rem;">
  <div class="carousel-inner">
    <div class="carousel-item active" style ="width: 25rem;">
      <img class="d-block w-100" style ="height: 100%;" src="<%= url1 %>" alt="First slide">
    </div>
    <div class="carousel-item" style ="width: 25rem;">
      <img class="d-block w-100" style ="height: 100%;" src="<%= url2 %>" alt="Second slide">
    </div>
    <div class="carousel-item" style ="width: 25rem;">
      <img class="d-block w-100" style ="height: 100%;" src="<%= url3 %>" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carousel-<%= flat_id %>" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel-<%= flat_id %>" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
